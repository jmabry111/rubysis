<div class="center hero-unit">
	<div class="row">
		<h3 class="left muted"><%= @section.course_name %> | <%= @section.description %> | Section <%= @section.section_number %></h3>
	</div>
	<div class="row">
		<div class="span6">
			<h3 class="left">Students:</h3>
		</div>
	</div>
	<div class="row">
		<div class="span3">Name</div>
			<% @section.semester.grading_periods.each do |gp| %>
				<div class="span1-5"><%= gp.description %></div>
			<% end %>
	</div>
	<hr />
		<% @enrollments.each do |enrollment| %>
			<div class="row">
				<div class="span3">
					<%= link_to enrollment.student.name, "#" %>
				</div>
				<% if enrollment.grades.present? %>
					<% enrollment.grades.each do |grade| %>
						<div class="span1-5"><%= grade.numerical_grade %></div>
					<% end %>
				<% end %>
			</div>
		<% end %>
</div>