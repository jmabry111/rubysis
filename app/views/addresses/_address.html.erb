<div class="row">
	<% if address.address_type == "Physical Address" %>
		<div class="section-head">Physical Address <span class="edit"><%= link_to "edit", edit_address_path(address) %></span></div>
	<% else %>
		<div class="section-head">Mailing Address <span class="edit"><%= link_to "edit", edit_address_path(address) %></span></div>
	<% end %>
</div>
<div class="row">
	<div class="span6">
		<p class="no-break"><%= address.street %>&nbsp;<%= address.unit %></p>
	</div>
</div>
<div class="row">
	<div class="span6">
		<p class="no-break"><%= address.city %>, <%= address.state %> <%= address.zip %></p>
	</div>
</div>