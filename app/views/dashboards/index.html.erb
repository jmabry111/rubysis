<div class="admin">
	<div class="row">
		<ul class="thumbnails">
			<li class="span-5"></li>
			<li class="span4">
				<div class="thumbnail">
					<%= link_to image_tag("students.png", :mouseover => "students-info.png"), students_path, :class=>"btn btn-large"  %>
				</div>
			</li>
			<li class="span4">
				<div class="thumbnail">
					<%= link_to image_tag("reports.png", :mouseover => "reports-info.png"), reports_sections_path, :class=>"btn btn-large" %>
				</div>
			</li>
			<li class="span4">	
				<div class="thumbnail">
					<%= link_to image_tag("schedule.png", :mouseover => "schedule-info.png"), "#", :class=>"btn btn-large"  %>
				</div>
			</li>
		</ul>
	</div>
	<hr />
	<% if @sections.any? %>
		<div class="row">
			<h2>Current Semester's Classes</h2>
			<div class="row">
				<div class="span4">Subject</div>
				<div class="span3">Teacher</div>
				<div class="span2-5">Days</div>
				<div class="span2-5">Time</div>
			</div>
			<% @sections.each do |section| %>
				<div class="row">
					<div class="span4"><%= section.course.course_name %></div>
					<div class="span3"><%= section.teacher.name %></div>
					<div class="span2-5"><%= section.days_of_week_string %></div>
					<div class="span2-5"><%= section.time_block %></div>
				</div>
			<% end %>
		</div>
	<% end %>
</div>